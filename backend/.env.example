# ============================================
# INFOVERSE BACKEND - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000
NODE_ENV=production

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB Atlas Connection String
# Format: mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGO_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/infoverse?retryWrites=true&w=majority

# ============================================
# FRONTEND URL (CORS)
# ============================================
# Your deployed Vercel frontend URL
# Example: https://infoverse-frontend.vercel.app
FRONTEND_URL=https://your-frontend-url.vercel.app

# ============================================
# JWT AUTHENTICATION
# ============================================
# Generate a strong random secret (minimum 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_min_32_characters_long_random_string
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# ============================================
# EMAIL CONFIGURATION (Nodemailer)
# ============================================
# SMTP Server Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587

# Email credentials
# For Gmail: Use App-Specific Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password_here

# Sender email address
EMAIL_FROM=noreply@infoverse.com

# ============================================
# CLOUDINARY CONFIGURATION (File Uploads)
# ============================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ============================================
# OTP CONFIGURATION
# ============================================
# OTP expiry time in minutes
OTP_EXPIRY=10

# ============================================
# RATE LIMITING
# ============================================
# Rate limit window in milliseconds (15 minutes = 900000)
RATE_LIMIT_WINDOW_MS=900000
# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# CODE EXECUTION (Optional)
# ============================================
# Time limit for code execution in milliseconds
CODE_EXECUTION_TIMEOUT=5000
# Memory limit in MB
CODE_EXECUTION_MEMORY_LIMIT=256
